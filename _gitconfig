[core]
    editor = nano
    ignorecase = false
    excludesfile = ~/.gitignore

# Anything local to this machine is kept in a separate file.
# This includes, credentials, authentication, signing, external tools.
[include]
    path = .gitconfig_local

[init]
    defaultBranch = main

[help]
    autocorrect = 1

[status]
    submodulesummary = true

[commit]
    verbose = false

[fetch]
    prune = true

[grep]
    lineNumber = true

[push]
    default = simple
    rebase = true

# [pull]
#    rebase = merges

[rebase]
    autosquash = true

[pager]
    show-branch = true
    status = true

[rerere]
    enabled = true

[filter "lfs"]
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f

# [merge]
#     tool = meld
#     conflictstyle = diff3

# [diff]
