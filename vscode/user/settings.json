{
    "workbench.colorTheme": "Monokai Pro",
    "workbench.colorCustomizations": {
        "[Monokai]": {
            "editorWhitespace.foreground": "#999"
        }
    },
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "editor.renderWhitespace": "all",
    "breadcrumbs.enabled": true,
    "git.branchProtection": [
        "develop,dev,main"
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "files.autoSave": "afterDelay",
    "github.gitProtocol": "ssh",
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.gpuAcceleration": "canvas",
    "terminal.integrated.fontFamily": "Menlo, monospace, PowerlineSymbols",
    "terminal.integrated.customGlyphs": true,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "editor.fontWeight": "normal",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "diffEditor.codeLens": true,
    "files.trimTrailingWhitespace": true,
    "editor.folding": false,
    "editor.rulers": [ 80, 120 ],
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": [
        "--rcfile=${env:HOME}/.pylintrc"
    ],
    "cSpell.language": "en-GB",
    "cSpell.enabledLanguageIds": [
        "asciidoc",
        "c",
        "cpp",
        "csharp",
        "css",
        "git-commit",
        "go",
        "handlebars",
        "haskell",
        "html",
        "java",
        "javascript",
        "javascriptreact",
        "json",
        "jsonc",
        "latex",
        "less",
        "markdown",
        "php",
        "plaintext",
        "python",
        "restructuredtext",
        "rust",
        "scala",
        "scss",
        "svelte",
        "tex",
        "text",
        "typescript",
        "typescriptreact",
        "yaml",
        "yml"
    ],
    "cSpell.ignorePaths": [
        "**/*-lock.json",
        "**/node_modules/**",
        "**/vscode-extension/**",
        "**/.git/**",
        "**/*.lock"
    ],
    "redhat.telemetry.enabled": false,
    "material-icon-theme.folders.theme": "classic",
    "material-icon-theme.opacity": 1,
    "material-icon-theme.saturation": 0.7,
    "editor.fontFamily": "'Monaspace Argon', monospace",
    "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09'",
    "workbench.iconTheme": "Monokai Pro Icons",
    "application.shellEnvironmentResolutionTimeout": 30,
    "window.zoomLevel": 1,
    "cSpell.enabled": true,
    "git.openRepositoryInParentFolders": "always"
}
